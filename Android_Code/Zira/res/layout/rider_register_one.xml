<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/first"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#222222"
        android:padding="10dp"
     >
	

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     	android:layout_centerInParent="true"
        android:src="@drawable/header_logo" />
    
        <ImageView
            android:id="@+id/button_rider_back_regisone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/leftarrow"
            android:padding="6dp"
            android:textColor="@color/blue" />

      <ImageView
        android:id="@+id/button_rider_Next_regisone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:padding="6dp"
         android:src="@drawable/rightarrow" />
	</RelativeLayout>
	
      <LinearLayout
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@+id/first"
        android:orientation="horizontal" >
        
        <View 
             android:layout_width="40dp"
            android:layout_height="7dp"
            android:background="#eeeeee"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_half" />
        
        <View 
             android:layout_width="60dp"
            android:layout_height="7dp"
            android:background="#eeeeee"
            android:layout_gravity="center_vertical"/>
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_empty" />
        
        <View 
             android:layout_width="60dp"
            android:layout_height="7dp"
            android:background="#eeeeee"
            android:layout_gravity="center_vertical"/>
        
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_empty" />
         
          <View 
             android:layout_width="40dp"
            android:layout_height="7dp"
            android:background="#eeeeee"
            android:layout_gravity="center_vertical"/>
          
    </LinearLayout>
    
	<ScrollView
	    android:id="@+id/scroll1"
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
	    android:layout_below="@+id/progressbar"
	    
	     >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        
     >
      <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:background="@drawable/textfield"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp">
          
           <ImageView
        android:id="@+id/imageView_EmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:paddingTop="10dp"
        android:paddingBottom="2dp"
        android:src="@drawable/emailimg" />
          
           
          <EditText
        android:id="@+id/edit_rider_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:hint="E-MAIL ADDRESS"
        android:textColor="#000000"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:background="@null">

        <requestFocus />
    </EditText>
    
   
      </LinearLayout>
        
  <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:background="@drawable/textfield"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        >
  <ImageView
        android:id="@+id/imageView_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:paddingTop="6dp"
        android:paddingBottom="2dp"
        android:src="@drawable/passimg" />
          
    <EditText
        android:id="@+id/edit_rider_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:hint="PASSWORD" 
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="@null"
        android:inputType="textPassword"/>

    </LinearLayout>
    <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:background="@drawable/textfield"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp">
    <ImageView
        android:id="@+id/imageView_MobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:paddingTop="6dp"
        android:paddingBottom="2dp"
        android:src="@drawable/phoneimg" />
    <EditText
        android:id="@+id/editText_rider_mobileNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:textColor="#000000"
        android:textSize="16sp"
        android:hint="MOBILE NUMBER"
    	android:inputType="number"
        android:background="@null"/>

        </LinearLayout>

    

        </LinearLayout>
        
  
</ScrollView>
</RelativeLayout>
