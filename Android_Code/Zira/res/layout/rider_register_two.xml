<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#222222"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/button_rider_back_registwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="7dp"
            android:src="@drawable/leftarrow" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/header_logo" />

        <ImageView
            android:id="@+id/button_rider_Next_registwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="7dp"
            android:src="@drawable/rightarrow" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:layout_width="40dp"
            android:layout_height="7dp"
            android:layout_gravity="center_vertical"
            android:background="#eeeeee" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_full" />

        <View
            android:layout_width="60dp"
            android:layout_height="7dp"
            android:layout_gravity="center_vertical"
            android:background="#eeeeee" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_half" />

        <View
            android:layout_width="60dp"
            android:layout_height="7dp"
            android:layout_gravity="center_vertical"
            android:background="#eeeeee" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_empty" />

        <View
            android:layout_width="40dp"
            android:layout_height="7dp"
            android:layout_gravity="center_vertical"
            android:background="#eeeeee" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/progressbar"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView_rider_uploadImage"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:src="@drawable/new_uploadscreen" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/textfield"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   	android:layout_gravity="center"
                   	android:padding="5dp"
                 
                    android:src="@drawable/name_img" />

                <EditText
                    android:id="@+id/editText_riderFirstName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:hint="Enter your First Name"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textSize="16sp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/textfield"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   	android:padding="5dp"
                  	android:layout_gravity="center"
                    android:src="@drawable/name_img" />

                <EditText
                    android:id="@+id/editText_riderLastName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:hint="Enter your Last Name"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textSize="16sp" >
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>